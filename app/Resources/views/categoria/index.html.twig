



    {% block body %}
        <a href="{{ path('app_texto_index')}}">Volver</a> <br>
        {% if categorias is empty %}
           <h2>Aun no hay categorias. Inserte la primera</h2>
            <a href="{{ path('app_categoria_create')}}">Create</a> <br>
        {% else %}

        {% for categoria in categorias %}
           <h4>{{ categoria.id }}.{{ categoria.nombre }}</h4>
