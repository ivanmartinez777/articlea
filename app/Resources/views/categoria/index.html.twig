                <a href="{{ path('app_categoria_remove', {'id': categoria.id})}}">remove</a> <br>
                <a href="{{ path('app_categoria_update', {'id': categoria.id}) }}">Editar categoria</a> <br>

        {% endfor %}
            <a href="{{ path('app_categoria_create')}}">Create</a> <br>

        {% endif %}
    {% endblock %}
