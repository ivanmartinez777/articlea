
{% extends '::base.html.twig' %}

{% block body %}
<div class="raw">
    <a href="{{ path('app_usuarios_index') }}">
        <button type="button" class="btn btn-default  col-xs-12 col-sm-12 col-md-offset-11 col-md-1 col-lg-offset-11 col-lg-1" style="margin-bottom: 3%;" >
            Usuarios
        </button>
    </a>
</div>
{% if categorias is empty %}
<<div class= "container-fluid">
    <div class= "row">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6" style="margin-bottom: 2%;" >
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="background-color: #F9BD5C;" >
                        <div class="panel-heading col-xs-8 col-sm-8 col-md-8 col-lg-8" style="background-color: #F9BD5C; color: white;">
                            <h3>AÃºn no hay categorias</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="{{ path('app_categoria_create')}}">
        <button type="button" class="btn col-xs-12  col-sm-offset-10  col-sm-2   col-md-offset-10  col-md-2 col-lg-offset-10 col-lg-2 " style="background-color: #2A578E; color: white;  margin-bottom: 5%;" ><span class="glyphicon glyphicon-plus" aria-hidden="true">
                </span>
        </button>
    </a>
    {% else %}
        <a href="{{ path('app_categoria_create')}}">
            <button type="button" class="btn col-xs-12  col-sm-offset-10  col-sm-2   col-md-offset-10  col-md-2 col-lg-offset-10 col-lg-2 " style="background-color: #2A578E; color: white;  margin-bottom: 5%;" ><span class="glyphicon glyphicon-plus" aria-hidden="true">
                </span>
            </button>
        </a>
        {% for categoria in categorias %}
            <div class= "container-fluid">
                <div class= "row">
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6" style="margin-bottom: 2%;" >
                        <div class="panel-group">
                            <div class="panel panel-default">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="background-color: #F9BD5C;" >
                                    <div class="panel-heading col-xs-8 col-sm-8 col-md-8 col-lg-8" style="background-color: #F9BD5C; color: white;">
                                        <h3>{{ categoria.id }}.{{ categoria.nombre }}</h3>
                                    </div>
                                    <a href="{{ path('app_categoria_remove', {'id': categoria.id})}}">
                                        <button type="button" class="btn col-xs-4  col-sm-4 col-md-offset-2 col-md-2   col-lg-offset-2  col-lg-2" style="background-color: #C66937; color: white;" >
                                            <span class="glyphicon glyphicon-remove" aria-hidden="true">
                                            </span>
                                        </button>
                                    </a>
                                </div>
                                <div class="panel-body col-xs-12 col-sm-12 col-md-12 col-lg-12" style="background-color: white;">
                                    <p>{{ categoria.descripcion }}</p>
                                </div>
                                <a href="{{ path('app_categoria_update', {'id': categoria.id}) }}">
                                    <button type="button" class="btn col-xs-12  col-sm-12 col-md-12 col-lg-12" style="background-color: #2A578E; color: white;" ><span class="glyphicon glyphicon-pencil" aria-hidden="true">
                                        </span>
                                    </button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endif %}
    {% endblock %}
