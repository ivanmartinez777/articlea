                {% if app.user.hasRole('ROLE_ADMIN') %}
                    <a href="{{ path('app_categoria_index') }}" style="margin-top: 10%;">Categorias</a> <br>
                    <a href="{{ path('app_usuarios_index') }}">Usuarios</a> <br>
                {% endif %}
            {% endif %}

<div class= "container-fluid">
    <div class= "row">
        {% for texto in textos %}
            {{ include('texto/texto.html.twig', { 'texto': texto }) }}

        {% endfor %}
</div>
    </div>
        <div class="navigation text-center  col-xs-12 col-sm-12 col-md-12 col-lg-12">
            {{ knp_pagination_render(textos) }}
        </div>

    {% endblock %}

