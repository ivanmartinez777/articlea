
{% block body %}


            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4"   style="margin-top: 2%; ">
                <div class="panel-group">
                    <div class="panel panel-default">
                        <div class="panel-warning col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <a href="{{ path('app_textoCategoria_show', {'categoria': texto.categoria}) }}"  style="color: white; text-decoration: none">
                                <button type="button" class="btn btn-warning col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    {{ texto.categoria }}
                                </button>
                            </a>
                        </div>
                        <div class="panel-heading col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            {% if texto.image == null %}
                                <img src="{{ asset("images/maquinapequeÃ±a.jpg") }}" class="img-responsive" >
                            {% else %}
                                <img src="{{ asset("images/upload/" ~texto.image) }}" class="img-responsive" alt="siu">
                            {% endif %}
                        </div>
                        <div class="panel-body " id="cajaTexto">
                            <em>{{ texto.createdAt | date}}</em> by <strong><a href="{{ path('app_texto_show', {'author': texto.author}) }}"><strong>{{ texto.author }}</strong></a></strong>
                            <h3>{{ texto.titulo }}</h3>
                            {{texto.ejemplo | nl2br}}
                        </div>
                        <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5" ><label>Lecturas: {{ texto.numVisitas }}</label></div>
                        <a href="{{ path('app_texto_addTorevista', {'id': texto.id}) }}">
                            <button type="button" class="btn btn-default  col-xs-2 col-sm-2 col-md-2 col-lg-2">
                                <span class="glyphicon glyphicon-send" aria-hidden="true"></span>
                            </button>
                        </a>
                        <a href="{{ path('app_texto_individual', {'id': texto.id}) }}" style="color: white; text-decoration: none">
                            <button type="button" class="btn btn-success col-xs-5 col-sm-5 col-md-5 col-lg-5">Seguir leyendo
                            </button>
                        </a>
                    </div>
                </div>
            </div>


{% endblock %}
